@model PokemonCardCollector.Models.PokemonCard

@{
    ViewData["Title"] = "Edit";
}

<h1 class="pokemon-font">Edit Your Card</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label bubble"></label>
                <input asp-for="Name" class="form-control bubble" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetName" class="control-label bubble"></label>
                <input asp-for="SetName" class="form-control bubble" />
                <span asp-validation-for="SetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetNumber" class="control-label bubble"></label>
                <input asp-for="SetNumber" class="form-control bubble" />
                <span asp-validation-for="SetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label bubble"></label>
                <input asp-for="Type" class="form-control bubble" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label bubble"></label>
                <input asp-for="Price" class="form-control bubble" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input bubble" asp-for="IsOwned" /> @Html.DisplayNameFor(model => model.IsOwned)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input bubble" asp-for="IsWanted" /> @Html.DisplayNameFor(model => model.IsWanted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary pokemon-font" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="pokemon-font" asp-action="Index">Back to Cards</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
